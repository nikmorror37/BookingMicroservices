@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
            <h1 class="text-danger mt-3">Oops! Something went wrong</h1>
            <p class="lead">We're sorry, but an error occurred while processing your request.</p>
            
            @if (Model?.ShowRequestId ?? false)
            {
                <p class="text-muted">
                    <strong>Request ID:</strong> <code>@Model?.RequestId</code>
                </p>
            }
            
            <div class="mt-4">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house-door me-2"></i>Go to Homepage
                </a>
                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Go Back
                </a>
            </div>
            
            @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
            {
                <hr class="my-4" />
                <div class="text-start">
                    <h3>Development Mode</h3>
                    <p>
                        Swapping to <strong>Development</strong> environment will hide detailed error information.
                    </p>
                </div>
            }
        </div>
    </div>
</div>