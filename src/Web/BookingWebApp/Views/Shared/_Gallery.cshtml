@model IEnumerable<string>
<div class="gallery mb-4">
    <div class="row g-2">
        <div class="col-md-8">
            <img src="@(Model?.FirstOrDefault() ?? "/img/placeholder-hotel.jpg")" class="img-fluid w-100 rounded gallery-main" data-bs-toggle="modal" data-bs-target="#galleryModal" />
        </div>
        <div class="col-md-4 d-flex flex-column gap-2">
            @foreach(var img in Model?.Skip(1).Take(3) ?? new List<string>()){
                <img src="@img" class="img-fluid rounded flex-fill object-fit-cover" style="height:108px;object-fit:cover;" data-bs-toggle="modal" data-bs-target="#galleryModal" />
            }
        </div>
    </div>
</div>
<!-- Modal with carousel -->
<div class="modal fade" id="galleryModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content bg-dark">
      <div class="modal-body p-0">
        <div id="galleryCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            @{
              var idx = 0;
              foreach(var img in Model ?? new[]{"/img/placeholder-hotel.jpg"}){
                <div class="carousel-item @(idx==0?"active":null)">
                  <img src="@img" class="d-block w-100" />
                </div>;
                idx++;
              }
            }
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#galleryCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#galleryCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
          </button>
        </div>
      </div>
      <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-2" data-bs-dismiss="modal"></button>
    </div>
  </div>
</div> 