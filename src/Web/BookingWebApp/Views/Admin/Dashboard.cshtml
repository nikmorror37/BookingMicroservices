            <div class="card-body">
                <h1 class="display-6">@ViewBag.Rooms</h1>
                <p class="text-muted">Rooms</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="display-6">@ViewBag.Bookings</h1>
