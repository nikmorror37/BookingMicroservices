@model IEnumerable<BookingWebApp.Services.HotelDto>
@{
    ViewData["Title"] = "Hotels Admin";
}
<h2 class="mb-3">Hotels (admin)</h2>
<a asp-action="Create" class="btn btn-success mb-3">Create new</a>
<table class="table table-striped">
 <thead>
  <tr><th>ID</th><th>Name</th><th>City</th><th>Stars</th><th></th></tr>
 </thead>
 <tbody>
 @foreach(var h in Model){
   <tr>
     <td>@h.Id</td>
     <td>@h.Name</td>
     <td>@h.City</td>
     <td>@h.Stars</td>
     <td>
        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@h.Id">Edit</a>
        <form asp-action="Delete" asp-route-id="@h.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this hotel?');">
           <button class="btn btn-sm btn-danger">Delete</button>
        </form>
     </td>
   </tr>
 }
 </tbody>
</table> 